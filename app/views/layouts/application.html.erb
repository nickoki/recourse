<!DOCTYPE html>
<html lang="en">

  <head>
    <title>Recourse</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0-beta.2/angular-resource.min.js"></script>

  </head>

  <body ng-app="recourse" ng-controller="RecourseController as vm">

    <nav class="navbar navbar-default">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/#/">Recourse</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="recourse-navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/#/">Home</a></li>
            <li data-ng-if="!vm.currentUser"><a id="signInModalButton" href="/#/" data-toggle="modal" data-target="#signInModal">Sign In</a></li>
            <li data-ng-if="!vm.currentUser"><a id="signUpModalButton" href="/#/" data-toggle="modal" data-target="#signUpModal">Sign Up</a></li>
            <li data-ng-if="vm.currentUser"><a href="/#/" data-ng-click="vm.signOut()" >Sign Out</a></li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <% flash.each do |type, message| %>
      <div class="alert <%= bootstrap_class_for(type) %> fade in">
        <%= message %>
      </div>
    <% end %>

    <div class="container">
      <ui-view></ui-view>
    </div>

    <div id="signInModal" class="modal fade" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Sign In</h4>
          </div>
          <div class="modal-body">
            <form method="POST">
              <input placeholder="Email" type="text" data-ng-model="user.email" />
              <input placeholder="Password" type="text" data-ng-model="user.password" />
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary" data-dismiss="modal" data-ng-click="vm.signIn(user)">Log In</button>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <div id="signUpModal" class="modal fade" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Sign Up</h4>
          </div>
          <div class="modal-body">
            <form method="POST">
              <input placeholder="Email" type="text" data-ng-model="user.email" />
              <input placeholder="Password" type="text" data-ng-model="user.password" />
              <input placeholder="Confirm Password" type="text" data-ng-model="user.password_confirmation" />
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary" data-dismiss="modal" data-ng-click="vm.signUp(user)">Sign Up</button>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

  </body>

</html>
